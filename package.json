{
  "private": true,
  "name": "@sigmacomputing/plugin-root",
  "version": "1.0.5",
  "description": "Sigma Computing Plugin API",
  "license": "MIT",
  "homepage": "https://github.com/sigmacomputing/plugin",
  "repository": {
    "type": "git",
    "url": "https://github.com/sigmacomputing/plugin.git"
  },
  "bugs": {
    "email": "support@sigmacomputing.com",
    "url": "https://github.com/sigmacomputing/plugin/issues"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "build:clean": "rm -rf packages/*/dist",
    "build": "yarn build:clean && yarn rollup --config rollup.config.js && yarn build:types",
    "build:types": "yarn tsc --build tsconfig.build.json",
    "format": "yarn lerna run format",
    "precommit": "yarn lint-staged",
    "release": "yarn np",
    "test": "yarn jest --ci"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.3.0",
    "@types/fs-extra": "^11.0.0",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.18",
    "fs-extra": "^11.1.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-watch-typeahead": "^2.2.1",
    "lerna": "^5.6.2",
    "lint-staged": "^13.0.3",
    "np": "^7.6.3",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "rollup": "^3.9.1",
    "rollup-plugin-visualizer": "^5.9.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "~4.8.4"
  }
}
